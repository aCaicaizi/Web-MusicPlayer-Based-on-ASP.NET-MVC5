@model IEnumerable<LSR.Models.AlbumSet>

<div class="table-responsive">
    <table class="table table-striped table-sm">
        <thead>
            <tr>
                <th scope="col">@Html.DisplayNameFor(m => m.Name)</th>
                <th scope="col">@Html.DisplayNameFor(m => m.ArtistSet.Name)</th>
                <th scope="col">@Html.DisplayNameFor(m => m.PublishDate)</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>@item.ArtistSet.Name</td>
                    <td>@item.PublishDate.Date</td>
                </tr>
            }
        </tbody>
    </table>
</div>
